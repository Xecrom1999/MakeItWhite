<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#b5ecea"
    tools:context="com.example.or.makeitwhite.GameOverActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Game Over"
        android:id="@+id/textView2"
        android:textSize="60sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:gravity="center_horizontal"
        android:text="funny comment"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#FF5722"
        android:id="@+id/funny_comment"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70sp"
        android:text="235"
        android:id="@+id/score_text2"
        android:textColor="#0D47A1"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Best score: "
        android:textColor="@android:color/primary_text_light"
        android:id="@+id/best_score_text"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="You have tapped"
        android:textColor="@android:color/secondary_text_light"
        android:id="@+id/all_taps"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:id="@+id/button"
        android:gravity="center"
        android:textColor="@drawable/play_button_text"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:background="@drawable/play_button_drawable"
        android:translationZ="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:onClick="playAgain"
        android:layout_marginTop="20dp"
        android:text="Play Again" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="#b5ecea"
    tools:context="com.example.or.makeitwhite.GameOverActivity">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/item_drawable"
        android:tint="#ff0000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="-40dp"/>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/item_drawable"
        android:tint="#00E5FF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/item_drawable"
        android:tint="#ff0000"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="230dp"
        android:layout_marginRight="-40dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:tint="#E040FB"
        android:src="@drawable/item_drawable"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="80dp"
        />
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:tint="#00E5FF"
        android:src="@drawable/item_drawable"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="-20dp"
        android:layout_marginLeft="100dp"
        />
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/item_drawable"
        android:tint="#76FF03"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp"
        />
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/item_drawable"
        android:tint="#76FF03"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="400dp"
        android:layout_marginRight="30dp"
        />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:tint="#E040FB"
        android:src="@drawable/item_drawable"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="-50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Game Over"
            android:id="@+id/textView2"
            android:textSize="60sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            android:text="funny comment gggg gggg dasdas dasdas sada asdas asdasd asdasd dasdas asdasd asdads"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#FF5722"
            android:id="@+id/funny_comment"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70sp"
            android:text="235"
            android:id="@+id/score_text2"
            android:textColor="#2962FF"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Best score: "
            android:textColor="@android:color/primary_text_light"
            android:id="@+id/best_score_text"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="You have tapped"
            android:textColor="@android:color/secondary_text_light"
            android:id="@+id/all_taps"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="30sp"
            android:textAllCaps="false"
            android:id="@+id/button"
            android:gravity="center"
            android:textColor="@drawable/play_button_text"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:background="@drawable/play_button_drawable"
            android:translationZ="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:onClick="playAgain"
            android:layout_marginTop="20dp"
            android:text="Play Again" />



    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        android:layout_alignParentBottom="true"
        ads:adUnitId="ca-app-pub-8045128595154184/5853960551"
        android:layout_marginTop="25dp"/>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#b5ecea"
    tools:context="com.example.or.makeitwhite.GameOverActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Good Job!"
        android:id="@+id/textView2"
        android:textSize="48sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Your score: "
        android:textColor="@android:color/secondary_text_light"
        android:id="@+id/score_text"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Best score: "
        android:textColor="@android:color/secondary_text_light"
        android:id="@+id/best_score_text"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:text="Play Again"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:id="@+id/button"
        android:gravity="center"
        android:textColor="@drawable/play_button_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:textStyle="bold"
        android:background="@drawable/play_button_drawable"
        android:translationZ="16dp"
        android:onClick="playAgain"/>

</LinearLayout>

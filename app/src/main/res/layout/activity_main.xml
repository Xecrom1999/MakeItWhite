<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b5ecea"
    tools:context="com.example.or.makeitwhite.MainActivity">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:text="Play"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:id="@+id/button"
        android:onClick="onClick"
        android:gravity="center"
        android:textColor="@drawable/play_button_text"
        android:layout_marginBottom="70dp"
        android:layout_above="@+id/adView"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:background="@drawable/play_button_drawable"
        android:elevation="16dp"
        />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/item_drawable"
        android:tint="#B71C1C"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="-40dp"/>
    <ImageView
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:src="@drawable/item_drawable"
        android:tint="#2196F3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40dp"
         />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/item_drawable"
        android:tint="#B71C1C"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="140dp"
        android:layout_marginRight="-40dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:tint="#0D47A1"
        android:src="@drawable/item_drawable"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="80dp"
        />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:tint="#0D47A1"
        android:src="@drawable/item_drawable"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="100dp"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:src="@drawable/item_drawable"
        android:tint="#F57F17"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp"
         />
    <ImageView
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:tint="#4CAF50"
        android:src="@drawable/item_drawable"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="90dp"
        />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:tint="#F57F17"
        android:src="@drawable/item_drawable"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="-30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make It\nWhite"
        android:gravity="center"
        android:id="@+id/make_it_white"
        android:textColor="@android:color/primary_text_light"
        android:textSize="60sp"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>


</RelativeLayout>

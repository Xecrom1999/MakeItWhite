<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b5ecea"
    tools:context="com.example.or.makeitwhite.MainActivity">

    
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8045128595154184/1925228952"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:text="Play"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:id="@+id/button"
        android:onClick="onClick"
        android:gravity="center"
        android:textColor="@drawable/play_button_text"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/best_score_text"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:background="@drawable/play_button_drawable"
        android:elevation="16dp"
        />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/item_drawable"
        android:tint="#ff0000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="-40dp"/>
    <ImageView
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:src="@drawable/item_drawable"
        android:tint="#00E5FF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40dp"
         />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/item_drawable"
        android:tint="#ff0000"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="140dp"
        android:layout_marginRight="-40dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:tint="#76FF03"
        android:src="@drawable/item_drawable"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="80dp"
        />
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:tint="#00E5FF"
        android:src="@drawable/item_drawable"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="100dp"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:src="@drawable/item_drawable"
        android:tint="#E040FB"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp"
         />
    <ImageView
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:tint="#76FF03"
        android:src="@drawable/item_drawable"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="90dp"
        />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:tint="#E040FB"
        android:src="@drawable/item_drawable"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="-40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make It\nWhite"
        android:gravity="center"
        android:id="@+id/make_it_white"
        android:textColor="@android:color/primary_text_light"
        android:textSize="60sp"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Best score: "
        android:textColor="@android:color/primary_text_light"
        android:id="@+id/best_score_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="You have tapped "
        android:textColor="@android:color/secondary_text_light"
        android:id="@+id/text"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/adView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
